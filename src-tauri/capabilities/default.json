{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main", "emu_config"],
    "permissions": [
        "core:default",
        "core:webview:allow-webview-hide",
        "core:webview:allow-webview-show",
        "core:window:allow-hide",
        "core:window:allow-show",
        "dialog:allow-open",
        "fs:allow-copy-file",
        "fs:allow-exists",
        "fs:allow-mkdir",
        "fs:allow-read-dir",
        "fs:allow-read-file",
        "fs:allow-read-text-file",
        "fs:allow-resource-read-recursive",
        "fs:allow-unwatch",
        "fs:allow-watch",
        "fs:allow-write-file",
        "fs:allow-write-text-file",
        "fs:default",
        "log:default",
        "opener:allow-open-path",
        "opener:allow-reveal-item-in-dir",
        "opener:default",
        "os:default",
        "process:default",
        "sql:allow-execute",
        "sql:default",
        "store:default",
        "updater:default",
        "upload:default",
        {
            "identifier": "fs:scope",
            "allow": ["**/*"]
        },
        {
            "identifier": "opener:allow-open-path",
            "allow": [
                {
                    "path": "**/*"
                },
                {
                    "path": "**/.*"
                }
            ]
        }
    ]
}
